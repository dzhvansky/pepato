#! /c/Octave/Octave-5.2.0/mingw64/bin/octave-cli -qf
printf ('current directory: %s\n', pwd())

[pepato_path, ~, ~] = fileparts(mfilename('fullpath'));
addpath(fullfile(pepato_path, 'src'));

arg_list = argv ();
if nargin ~= 5
  printf ('ERROR: There should be 5 args. Side of the body, NMF stop criteria, name of the database from pepato/db directory, the dir containing the experiment data files (*emg.csv + *gaitEvents.yaml) and the dir where the results will be stored\n');
  printf ('Usage:\n');
  printf ('\t./run_pepato body_side nnmf_stop_criteria db_name data_dir result_dir\n\n');
  exit(127);
end

printf ('body side: %s\n', arg_list{1});
printf ('NMF stop criteria: %s\n', arg_list{2});
printf ('database name: %s\n', arg_list{3});
printf ('data dir: %s\n', arg_list{4});
printf ('result dir: %s\n', arg_list{5});

for package_name = {'signal', 'statistics'}
    pkg('load', package_name{:});
end

% config = {high_pass, low_pass, norm_points, n_module_max, nnmf_replicates, nnmf_stop_criterion}
% nnmf_stop_criterion must be from the list ['BLF', 'N=4', 'R2=0.90']
config = {30, 400, 200, 8, 50, arg_list{2}};
db_path = fullfile(pepato_path, 'db', arg_list{3});
muscle_list = {'BiFe', 'SeTe', 'VaMe', 'VaLa', 'ReFe', 'TiAn', 'GaMe', 'Sol'};

PepatoBasic()...
    .init(arg_list{4}, arg_list{5}, arg_list{1}, config, db_path, muscle_list)...
    .pipeline({'speed2kmh', 'speed4kmh', 'speed6kmh'}, 4);
